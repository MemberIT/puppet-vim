" vimrc: Managed by puppet - DO NOT EDIT
" Changes to this file can, and will, be lost

runtime! <%= @osfamily.downcase %>.vim

set background=<%= @opt_bg_shading %>
<% if @opt_syntax == true -%>
if has("syntax")
  syntax on
endif
<% end -%>
if has("autocmd")
<% @opt_autocmds.each do |autocmd| -%>
  au <%= autocmd %>
<% end -%>
<% if @opt_lastposition -%>
  au BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "normal! g'\"" | endif
<% end -%>
  autocmd BufNewFile,BufReadPre /media/*,/mnt/* set directory=~/tmp,/var/tmp,/tmp
<% if @opt_indent -%>
  filetype plugin indent on
<% end -%>
endif

<% @opt_misc.each do |option| -%>
set <%= option %>
<% end -%>

<% @opt_maps.each do |k,v| -%>
map <%= k %> <%= v %>
<% end -%>

<% if @opt_powersave -%>
let &guicursor = &guicursor . ",a:blinkon0"
<% end -%>

<% if @opt_statusline != '' -%>
set statusline=<%= @opt_statusline %>
<% end -%>

<% if @osfamily == 'Debian' -%>
if filereadable("/etc/vim/vimrc.local")
  source /etc/vim/vimrc.local
endif
<% end -%>
